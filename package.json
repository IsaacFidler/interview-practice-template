{
  "name": "interview-practice-template",
  "version": "1.0.0",
  "private": true,
  "description": "Full-stack Next.js + Nest.js template for technical interview practice",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:web": "npm run dev -w apps/web",
    "dev:api": "npm run start:dev -w apps/api",
    "build": "npm run build -w apps/api && npm run build -w apps/web",
    "build:web": "npm run build -w apps/web",
    "build:api": "npm run build -w apps/api",
    "lint": "npm run lint -w apps/web && npm run lint -w apps/api",
    "test": "npm run test -w apps/api",
    "clean": "rm -rf apps/*/node_modules apps/*/.next apps/*/dist node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
