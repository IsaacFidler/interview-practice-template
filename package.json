{
  "name": "interview-practice-template",
  "version": "1.0.0",
  "private": true,
  "description": "Full-stack Next.js + Nest.js template for technical interview practice",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"yarn dev:api\" \"yarn dev:web\"",
    "dev:web": "yarn workspace web dev",
    "dev:api": "yarn workspace api start:dev",
    "build": "yarn build:api && yarn build:web",
    "build:web": "yarn workspace web build",
    "build:api": "yarn workspace api build",
    "lint": "yarn workspace web lint && yarn workspace api lint",
    "test": "yarn workspace api test",
    "clean": "rm -rf apps/*/node_modules apps/*/.next apps/*/dist node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
